import java.util.*;
import java.lang.*;
public class pascal{
public static void main(String args[]){
Scanner obj=new Scanner(System.in);
System.out.println("enter the no of rows : ");
int n=obj.nextInt();
for(int i=0;i<n;i++){
for(int j=n-1;j>=i;j--){
System.out.print(" ");
}
int t=1;
for(int k=0;k<=i;k++){
System.out.print(t+" ");
t=t*(i-k)/(k+1);
}
System.out.println();
}

}
}
