import java.util.*;
import java.lang.*;
public class org{
public static void main(String args[]){
try{
Scanner obj=new Scanner(System.in);
System.out.print("enter the number : ");
int n=obj.nextInt();
int rem;
int rev=0;
while(n!=0){
rem=n%10;
rev=rev*10+rem;
n/=10;
}
System.out.println("reversed number : "+rev);
}
catch(Exception a){
System.out.println("invalid.....");
}
}
}
